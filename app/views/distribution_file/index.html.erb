<%= javascript_include_tag "main" %>
<%= javascript_include_tag "distribution_file" %>


<div class="panel panel-success">
  <div class="panel-heading">Добавить файл</div>
  <div class="panel-body">
    <form class="form-inline" role="form" action="/distribution_file/srv_new_file" enctype="multipart/form-data" method="post">
      <div class="form-group">
        <label class="sr-only" for="inputFile"></label>
        <input type="file" id="inputFile" name="inputFile">

      </div>
      <button class="btn btn-default">Отправить</button>
    </form>
  </div>
</div>


<div class="panel panel-success">
  <div class="panel-heading">Список файлов</div>


  <table class="table table-bordered table-condensed">
    <thead>
    <tr>
      <th class="col-md-1">#</th>
      <th>Файл</th>
      <th class="col-md-3">Дата</th>
      <th class="col-md-2">Действия</th>
    </tr>
    </thead>
    <tbody>

        <% @form_data[:my_files].each.with_index do |file, index| %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= file.filename %></td>
              <td><%= file.created_at%></td>
              <td><i class="glyphicon glyphicon-search"></i></td>
            </tr>
        <% end %>


    </tbody>
  </table>


</div>

