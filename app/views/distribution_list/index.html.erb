<%= javascript_include_tag "main" %>
<%= javascript_include_tag "distribution_list" %>

<div class="panel panel-success">
  <div class="panel-heading">Список глобальных листов</div>


  <table class="table table-bordered table-condensed">
    <thead>
    <tr>
      <th class="col-md-1">#</th>
      <th>Наименование</th>
      <th class="col-md-3">Дата</th>
      <th class="col-md-1">Действия</th>
    </tr>
    </thead>
    <tbody>

    <% @form_data[:my_lists].each.with_index do |list, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= list.name %></td>
          <td><%= list.created_at%></td>
          <td>
            <a href="/distribution_list/edit/<%= list.id %>" type="button" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-edit"></i></a>
            <a href="/distribution_list/delete/<%= list.id %>" type="button" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
          </td>
        </tr>
    <% end %>


    </tbody>
  </table>


</div>
