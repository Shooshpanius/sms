<%= javascript_include_tag "main" %>
<%= javascript_include_tag "distribution_list_edit" %>





<div class="panel panel-success">
  <div class="panel-heading">Строки листа</div>


  <table class="table table-bordered table-condensed">
    <thead>
    <tr>
      <th>#</th>
      <th>ФИО</th>
      <th>Договор</th>
      <th>Сумма платежа</th>
      <th>Сумма долга</th>
      <th>Дата оплаты</th>
      <th>Телефон</th>
      <th>Действия</th>

      <% @form_data[:list_strings].each.with_index do |list_string, index| %>
        <tr id="s_<%= list_string.dogovor %>">
          <td><%= index+1 %></td>
          <td><%= list_string.fio %></td>
          <td><%= list_string.dogovor %></td>
          <td><%= list_string.summa %></td>
          <td><%= list_string.summa_dolg %></td>
          <td><%= list_string.oplata_date %></td>
          <td>
            <%
               phone_array = list_string.phone.scan(/[[:word:]]+/)
            %>
            <% phone_array.each do |phone| %>
            <%= phone  %><br />

            <% end %>
          </td>
          <td><button type="button" class="btn btn-danger btn-xs" onclick="delete_list_string(<%= list_string.id %>)"><i class="glyphicon glyphicon-trash"></i></button></td>




        </tr>
    <% end %>

      <th>Действия</th>
    </tr>
    </thead>
    <tbody>




    </tbody>
  </table>


</div>

