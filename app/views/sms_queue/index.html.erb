<%= javascript_include_tag "main" %>
<%= javascript_include_tag "sms_queue" %>



<table class="table table-bordered table-condensed">
  <thead>
  <tr>
    <th>#</th>
    <th>Клиент</th>
    <th>Договор</th>
    <th>СМС шлюз</th>
    <th>Телефон</th>
    <th>Текст</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody id="table_d" name="table_d">
  <% @form_data[:sms_queue].each.with_index do |sms, index| %>
    <tr>
        <td><%= index+1 %></td>
        <td><%= Client.find(sms.client_id).fio %></td>
        <td><%= Client.find(sms.client_id).dogovor %></td>
        <td><%= SmsService.find(sms.sms_service_id).name %></td>
        <td><%= sms.phone %></td>
        <td><%= sms.text %></td>
        <td></td>
    </tr>
  <% end %>

  </tbody>
</table>

