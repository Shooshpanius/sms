<%= javascript_include_tag "main" %>
<%= javascript_include_tag "admin/users_edit" %>



<form class="form-horizontal" role="form" id="sms_service_edit" name="sms_service_edit">

  <div class="form-group hidden">
    <label for="user_id" class="col-sm-2 control-label">user_id</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="user_id" id="user_id" value="<%= @form_data[:user].id  %>">
    </div>
  </div>

  <div class="form-group">
    <label for="login" class="col-sm-2 control-label">Login</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="login" id="login" value="<%= @form_data[:user].login  %>">
    </div>
  </div>

  <div class="form-group">
    <label for="username" class="col-sm-2 control-label">username</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="username" id="username" value="<%= @form_data[:user].username  %>">
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="email" id="email" value="<%= @form_data[:user].email  %>">
    </div>
  </div>

  <div class="form-group">
    <label for="pwd" class="col-sm-2 control-label">pwd</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="pwd" id="pwd" value="<%= @form_data[:user].pwd  %>">
    </div>
  </div>

  <div class="form-group">
    <label for="user_login" class="col-sm-2 control-label">qiwi</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="qiwi" id="qiwi" value="<%= @form_data[:user].qiwi  %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" style="padding-top: 0px">adm</label>
    <div class="col-sm-10 ">
        <input  type="checkbox" name="adm" id="adm"
            <%= (@form_data[:user].adm)?'checked':'' %>
        >
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" style="padding-top: 0px">active</label>
    <div class="col-sm-10 ">
        <input  type="checkbox" name="active" id="active"
            <%= (@form_data[:user].active)?'checked':'' %>
        >
    </div>
  </div>

  <div class="form-group">
    <label for="price_sms" class="col-sm-2 control-label">price_sms</label>
    <div class="col-sm-2">
        <div class="input-group">
            <input type="text" class="form-control" name="price_sms" id="price_sms" value="<%= @form_data[:user].price_sms  %>">
            <span class="input-group-addon">руб.</span>
        </div>
    </div>
  </div>

  <div class="form-group">
    <label for="price_voice" class="col-sm-2 control-label">price_voice</label>
    <div class="col-sm-2">
        <div class="input-group">
            <input type="text" class="form-control" name="price_voice" id="price_voice" value="<%= @form_data[:user].price_voice  %>">
            <span class="input-group-addon">руб.</span>
        </div>
    </div>
  </div>

  <div class="form-group">
    <label for="service_sms_id" class="col-sm-2 control-label">service_sms_id</label>
    <div class="col-sm-10">
      <select class="form-control" id="service_sms_id" name="service_sms_id">
        <%= options_for_select(@form_data[:sms_services], @form_data[:user].service_sms_id) %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="service_voice_id" class="col-sm-2 control-label">service_voice_id</label>
    <div class="col-sm-10">
      <select class="form-control" id="service_voice_id" name="service_voice_id">
        <%= options_for_select(@form_data[:sms_services], @form_data[:user].service_voice_id) %>
      </select>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Сохранить</button>
      <button type="button" class="btn btn-info" >Отменить</button>
    </div>
  </div>
</form>