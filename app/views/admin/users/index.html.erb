<%= javascript_include_tag "main" %>
<%= javascript_include_tag "admin/users" %>


<table class="table table-bordered table-condensed">
  <thead>
  <tr>
    <th class="col-md-1">#</th>
    <th>Логин</th>
    <th>ФИО</th>
    <th>E-mail</th>
    <th class="col-md-1">Статус</th>
    <th class="col-md-1">Действия</th>
  </tr>
  </thead>
  <tbody>

  <% @form_data[:users].each.with_index do |user, index| %>
      <tr id="c_<%= user.id %>">
        <td><%= user.id %></td>
        <td><%= user.login %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= (user.adm)?'Admin':'' %> <%= (user.active)?'Active':'' %></td>
        <td>
          <a href="/admin/users/edit/<%= user.id %>" type="button" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-edit"></i></a>
        </td>
      </tr>
  <% end %>


  </tbody>
</table>