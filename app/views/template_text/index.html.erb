<%= javascript_include_tag "main" %>
<%= javascript_include_tag "template_text" %>


<div class="panel panel-info">

  <div class="panel-heading">
    <h3 class="panel-title" onclick="template_new_show()" style="cursor: pointer;">Новый шаблон </h3>
  </div>

  <div class="panel-body" id="newTemplatePanelBody" style="display: none;">

    <form class="form-horizontal" role="form" id="newTemplateForm" name="newTemplateForm">
      <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">Название</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputName" name="inputName" placeholder="Название">
        </div>
      </div>
      <div class="form-group">
        <label for="inputText" class="col-sm-2 control-label">Текст</label>
        <div class="col-sm-10">
          <textarea class="form-control" rows="2" id="inputText" name="inputText" placeholder="Текст"></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <input type="checkbox" id="inputTranslite" name="inputTranslite"> Транслит
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Добавить</button>
        </div>
      </div>
    </form>

    <div>
        <em style="color:red">###fio###</em>
        <em> - ФИО; </em>
        <em style="color:red"> ###dog###</em>
        <em> - договор; </em>
        <em style="color:red"> ###sum###</em>
        <em> - сумма; </em>
        <em style="color:red"> ###dlg###</em>
        <em> - долг; </em>
        <em style="color:red"> ###dte###</em>
        <em> - дата;</em>
        <em style="color:red"> ###dtx###</em>
        <em> - дата из листа</em>
    </div>

  </div>

</div>

<div class="panel panel-success">
  <div class="panel-heading">Список шаблонов</div>
  <div class="panel-body">
    <table class="table table-bordered table-condensed">
      <thead>
          <tr>
            <th class="col-md-1">#</th>
            <th class="col-md-2">Название</th>
            <th>Шаблон</th>
            <th class="col-md-1">Транслит</th>
            <th class="col-md-1">Действия</th>
          </tr>
      </thead>
      <tbody>
          <% @form_data[:templates].each.with_index do |template, index| %>
              <tr id="t_<%= template.id %>">
                <td><%= index+1 %></td>
                <td><%= template.name %></td>
                <td><%= template.text%></td>
                <td><%== (template.translite==true)?'<i class="glyphicon glyphicon-check"></i>':'<i class="glyphicon glyphicon-unchecked"></i>' %></td>
                <td>
                  <a type="button" class="btn btn-primary btn-xs" onclick="edit_template(<%= template.id %>)"><i class="glyphicon glyphicon-edit"></i></a>
                  <a type="button" class="btn btn-danger btn-xs" onclick="delete_template(<%= template.id %>)"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<div id="edit_template_modal_container">

</div>


